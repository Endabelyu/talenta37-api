generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  username   String @unique
  name       String @db.VarChar(100)
  email      String @unique
  password   Password?
  phone      String?  @unique @db.VarChar(32)
  address    String?  @db.VarChar(255)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  orders Order[]
  role       Role     @relation(fields: [roleId], references: [id])
  roleId     String   // Foreign key to Role model
  @@map("users")
}


model Role {
  id    String  @id @default(cuid())
  name  String  @unique  // Role name (e.g., 'admin', 'staff', etc.)
  users User[]  // Relation to users

  @@map("roles")
}

model Password {
  id String @id @default(cuid())

  hash String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  @@map("passwords")

}
model Frame {
  id        String   @id @default(cuid())
  name      String   @unique 
  price     Int  // Price of the frame
  brand     String  // Optional brand name for the frame
  material     String  // Optional brand name for the frame
  imageURL String?  // Optional image linkfor the frame
  description String?  @db.VarChar(255)
  // orders    Order[]  // Relation to orders
  stock     Int?     // Optional stock quantity
  sku       String?  // Optional lens sku
  @@map("frames")
}

model Lens {
  id        String   @id @default(cuid())
  brand     String  // Optional brand name for the frame
  name      String   @unique
  price     Int?   // Price of the lens
  type      String?  // Optional type of lens (e.g., single vision, progressive)
  material  String?  // Optional lens material (e.g., plastic, glass)
  stock     Int?     // Optional stock quantity
  // orders    Order[]  // Relation to orders
  sku       String?  // Optional lens sku
  @@map("lenses")
}

model Order {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  customerName  String
  customerPhone String  
  rightEyeSph   String   // Spherical power for right eye
  rightEyeCyl   String?   // Cylindrical power for right eye
  rightEyeAxis  Int?     // Axis for right eye
  rightEyeAdd   String?   // Addition power for right eye

  leftEyeSph    String   // Spherical power for left eye
  leftEyeCyl    String?   // Cylindrical power for left eye
  leftEyeAxis   Int?     // Axis for left eye
  leftEyeAdd    String?   // Addition power for left eye

  // frame         Frame?   @relation(fields: [frameId], references: [id])
  // frameId       String?  // Foreign key to Frame
  frame         String
  lens          String
  // lens          Lens?    @relation(fields: [lensId], references: [id])
  // lensId        String?  // Foreign key to Lens

  price          Int?    // Price of the order
  // framePrice     Float?    // Price of the frame
  // lensPrice      Float?    // Price of the lens
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("orders")
}

